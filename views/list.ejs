<%- include("header") -%>
    <div class="box" id="heading">
        <h1><%= listTitle %>!</h1>
    </div>
    <div class="box">
        <% for(let i=0;i<newListItems.length;i++){ %>
        <div class="item">
            <input type="checkbox">
            <p><%= newListItems[i] %></p>    
        </div>
          <% } %>

        <form class="item" method="POST" action="/">
            <input class="item" type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>
        <form action="/deleteItem" method="post">
            <input type="hidden" name="list">
            <button type="submit" name="button" value="<%= listTitle %>">x</button>
        </form>
    </div> 

 

    <%- include("footer") -%>